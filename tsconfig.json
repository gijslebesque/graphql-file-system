{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": ".",
    "lib": ["esnext", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "README.md": ["./README.md"]
    }
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true,
    "typeCheck": false,
    "transpileOnly": true
  }
}
